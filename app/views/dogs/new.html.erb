<%= render 'shared/navbar-top' %>
<div style="margin-top: 5rem;" class="container">
  <h1>Add the dog</h1>
  <%= simple_form_for [@user, @dog] do |f| %>
  <%= f.input :name %>
  <%= f.input :breed %>
  <%= f.input :age %>
  <%= f.association :parks, required: true, input_html: { multiple: false }, prompt: "Select a park" %>
  <%= f.input :bio %>
  <div class="upload-btn-wrapper">
    <button class="btn btn-secondary ">Now upload some photos</button>
    <%= f.input :photos, as: :file, input_html: { multiple: true }, required: true %>
  </div>
  <%= f.button :submit, "Done!", class: "btn btn-secondary mb-3" %>
  <% end %>
</div>
