<div style="margin-top: 3.8rem;">

      <div class="container py-3">
      <%= link_to root_path, class: 'button-back' do %>
      <i class="fa fa-angle-left" aria-hidden="true"></i>
      <% end %>
    </div>

      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <div style="height: 300px" class="carousel-item active">
          <%= cl_image_tag @dog.photos.first.key, class: "d-block w-100"  %>
        </div>
        <% @dog.photos.each do |photo| %>
        <div style="height: 300px" class="carousel-item">
          <%= cl_image_tag photo.key, class: "d-block w-100"  %>
        </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  <div class="container pt-3">
    <div class="dog-content">
      <div class="dog-content-title d-flex justify-content-between">
        <h2 class="mb-0">
          <%= @dog.name %>
        </h2>
        <div class="status">
          <p class="medium mb-0">ready to walk</p>
        </div>
      </div>
      <div class="dog-content-body">
        <div class="dog-content-body-info">
          <p class="mb-0" id="category">
            <%= @dog.breed %>,
            <%= @dog.age %>
          </p>
          <p>
            <%= @dog.bio %>
          </p>
        </div>
      </div>
      <% if @sniff %>
        <%= link_to 'Unsniff', sniff_path(@sniff), method: :delete, id:'sniffer', class: "btn btn-secondary-revert" %>
      <% else %>
        <%= link_to 'Sniff', dog_sniffs_path(@dog), method: :post, id:'sniffer', class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>
