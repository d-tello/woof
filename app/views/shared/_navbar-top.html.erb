<% if user_signed_in? %>
<nav class="navbar fixed-top navbar-dark bg-white">
  <%= link_to "Woof", root_path, class: "logo" %>
  <div>
    <%= image_tag "icons8-qr-code-64.png", alt: "Show your QR Code", size: "30x30", class: "mr-2"%>
    <%= link_to chatrooms_path do %>
    <%= image_tag "icons8-email-send-50.png", alt: "Send a message", size: "30x30", class: "mr-2"%>
    <% end %>
    <%= link_to user_path(current_user) do %>
    <% if current_user.photo.attached? %>
    <%= cl_image_tag current_user.photo.key, class: "avatar" %>
    <% else %>
    <%= image_tag "user-icon-placeholder", class: "avatar"%>
    <% end %>
    <% end %>
  </div>
</nav>
<% end %>
